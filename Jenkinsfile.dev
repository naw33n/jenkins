pipeline {
    agent any

    stages {


    stage('Repo Scan') {
            steps {
                echo 'Trivy Repo Scan'
                sh :'trivy repo https://github.com/naw33n/jenkins.git', branch: 'dev'
                
            }
        }

        stage('Code fetch') {
            steps {
                echo 'Code Fetch from github'
                git url :'https://github.com/naw33n/jenkins.git', branch: 'dev'
                
            }
        }
        
        stage('Build') {
            steps {
                sh 'docker build -t my-new-website .'

            }
        }
        
        stage('Deploy') {
            steps {
                echo 'Deploy on Container'
                //sh 'docker stop $(docker ps -q) && docker system prune -a '
                sh 'docker stop confident_wright'
                sh 'docker run -t -p 80:80 my-new-website '
            }
        }
    }
}
